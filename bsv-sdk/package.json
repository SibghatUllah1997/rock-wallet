{
  "name": "@rockwallet/bsv-sdk",
  "version": "1.0.0",
  "description": "BSV-specific SDK with secure sharding, UTXO management, and token support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:real": "jest tests/real",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "ts-node src/index.ts"
  },
  "keywords": [
    "bsv",
    "bitcoin-sv",
    "wallet",
    "sharding",
    "shamir",
    "utxo",
    "tokens",
    "metanet",
    "sensible"
  ],
  "author": "Rockwallet Labs",
  "license": "ISC",
  "dependencies": {
    "@bsv/sdk": "^1.8.10",
    "axios": "^1.6.0",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^7.0.0",
    "bsv": "^2.0.10",
    "ecpair": "^2.1.0",
    "ethers": "^6.15.0",
    "node-fetch": "^3.3.2",
    "secrets.js-grempe": "^2.0.0",
    "tiny-secp256k1": "^2.2.4",
    "wif": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
